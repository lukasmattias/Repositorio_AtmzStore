<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PagamentoController">
    <padding>
        <Insets bottom="0" left="0" right="0" top="0" />
    </padding>
   <children>
      <AnchorPane fx:id="TelaCompra" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="206.0" layoutY="14.0" text="Pagamento" textFill="#8b3dff">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <TableView layoutY="59.0" prefHeight="142.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="PagamentoID" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="PagamentoNome" prefWidth="75.0" text="Nome" />
                  <TableColumn fx:id="PagamentoDescricao" prefWidth="358.0" text="Descrição" />
                  <TableColumn fx:id="PagamentoPreco" minWidth="0.0" prefWidth="91.0" text="Preço" />
              </columns>
            </TableView>
            <Button fx:id="btnConfirmarPedido" layoutX="42.0" layoutY="344.0" mnemonicParsing="false" onAction="#ConfirmarCompra" text="Confirmar">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label layoutX="14.0" layoutY="298.0" prefHeight="17.0" prefWidth="74.0" text="SubTotal R$">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="PagamentoSubTotal" layoutX="107.0" layoutY="298.0" opacity="0.32" prefHeight="17.0" prefWidth="89.0" text="SubTotal" />
            <Button fx:id="btnPagamentoVoltar" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#VoltarCarrinho" text="Voltar">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="btnCredito" layoutX="24.0" layoutY="209.0" mnemonicParsing="false" onAction="#TelaCredito" text="Credito">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnPix" layoutX="107.0" layoutY="209.0" mnemonicParsing="false" onAction="#TelaPix" text="PIX">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <AnchorPane fx:id="PagamentoAnchorPane" layoutX="178.0" layoutY="203.0" prefHeight="197.0" prefWidth="424.0" />
         </children>
      </AnchorPane>
   </children>
</StackPane>
